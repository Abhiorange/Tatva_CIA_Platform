        <div class="info">
            <div class="form"> 
              <form method="post" asp-action="registration" asp-controller="home"> 
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">First name</label>
                    <input type="text" class="form-control" asp-for="FirstName" id="formGroupExampleInput">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Last name</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                  </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="exampleInputPassword1" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                    <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <!-- <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div> -->
                    <button type="submit" class="btn btn-danger">Register</button>
                    <div id="txt1">
                         <a asp-area="" asp-controller="home" asp-action="forgetpassword" style="text-decoration: none;"> Lost your password?</a>
                      </div>
            
                      <div id="txt2">
                         Already Registred? <a asp-area="" asp-controller="home" asp-action="index" id="bl">login</a>
                      </div>
              </form>
            </div>
